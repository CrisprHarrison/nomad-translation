{
    "transformations": [
        {
            "name": "lang_from_file",
            "source": "${file}",
            "operations": [
                "replace: german, de",
                "replace: spanish, es",
                "replace: simplified-chinese, zh-Hans",
                "replace: traditional-chinese, zh-Hant",
                "removeSuffix : .strings",
                "removeSuffix : .txt"
            ]
        }

    ],

    "upload": {
        "files": [
            {
                "path": "locales",
                "pattern": "locales/English.strings",
                "type": "ios-strings",
                "features": [
                    "filter_untranslated"
                ]
            },
            {
                "path": "description",
                "pattern": "description/English.txt",
                "type": "text"
            },
            {
                "group": "all",
                "path": "locales",
                "pattern": "locales/*.strings",
                "excludes": [
                    "locales/English.strings"
                ],
                "file": "English.strings",
                "type": "ios-strings",
                "lang": "${lang_from_file}",
                "features": [
                    "filter_untranslated"
                ]
            },
            {
                "group": "all",
                "path": "description",
                "pattern": "description/*.txt",
                "excludes": [
                    "description/English.txt"
                ],
                "file": "English.txt",
                "type": "text",
                "lang": "${lang_from_file}"
            }
        ],
        "deprecate": "file",
        "importAsNew": false,
        "forceCurrent": true,
        "filterSource": false
    },

    "download": {
        "files": "${path}/${langNameEn}.${fileExt}"
    }
}