{
    "transformations": [
        {
            "name": "lang_from_file",
            "source": "${file}",
            "operations": [
                "replace: german, de",
                "replace: spanish, es",
                "replace: simplified-chinese, zh-Hans",
                "replace: traditional-chinese, zh-Hant",
                "removeSuffix : .strings",
                "removeSuffix : .txt"
            ]
        },
        {
            "name": "file_from_lang",
            "source": "${lang}",
            "operations": [
                "replace: de, german",
                "replace: es, spanish",
                "replace: zh-Hans, simplified-chinese",
                "replace: zh-Hant, traditional-chinese"
            ]
        }
    ],

    "upload": {
        "files": [
            {
                "path": "locales",
                "pattern": "locales/english.strings",
                "type": "ios-strings",
                "features": [
                    "filter_untranslated"
                ]
            },
            {
                "path": "description",
                "pattern": "description/english.txt",
                "type": "text"
            },
            {
                "group": "all",
                "path": "locales",
                "pattern": "locales/*.strings",
                "excludes": [
                    "locales/english.strings"
                ],
                "file": "english.strings",
                "type": "ios-strings",
                "lang": "${lang_from_file}",
                "features": [
                    "filter_untranslated"
                ]
            },
            {
                "group": "all",
                "path": "description",
                "pattern": "description/*.txt",
                "excludes": [
                    "description/english.txt"
                ],
                "file": "english.txt",
                "type": "text",
                "lang": "${lang_from_file}"
            }
        ],
        "deprecate": "file",
        "importAsNew": false,
        "forceCurrent": true,
        "filterSource": false
    },

    "download": {
        "files": "${path}/${file_from_lang}.${fileExt}"
    }
}