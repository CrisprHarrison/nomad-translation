{
    "transformations": [
        {
            "name": "lang_from_file",
            "source": "${file}",
            "operations": [
                "replace: German, de",
                "replace: Spanish, es",
                "replace: Simplified Chinese, zh-Hans",
                "replace: Traditional Chinese, zh-Hant",
                "removeSuffix : .strings",
                "removeSuffix : .txt"
            ]
        }

    ],

    "upload": {
        "files": [
            {
                "path": "locales",
                "pattern": "locales/*.strings",
                "excludes": [
                    "locales/English.strings"
                ],
                "file": "English.strings",
                "type": "ios-strings",
                "lang": "${lang_from_file}",
                "features": ["filter_untranslated"]
            },
            {
                "path": "description",
                "pattern": "description/*.txt",
                "excludes": [
                    "description/English.txt"
                ],
                "file": "English.txt",
                "type": "text",
                "lang": "${lang_from_file}"
            }
        ],
        "importAsNew": false,
        "forceCurrent": true,
        "filterSource": false
    },

    "download": {
        "files": "locales/${file}"
    }
}